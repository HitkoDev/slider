{
    "name": "@task/cli",
    "version": "0.1.0",
    "private": true,
    "license": "GPL-3.0",
    "main": "dist/index.js",
    "esnext": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "cli": "ts-node --files ./src/index.ts",
        "build": "tsc -p tsconfig.production.json",
        "watch": "tsc -p tsconfig.production.json -w",
        "test": "mocha --parallel",
        "coverage": "nyc mocha",
        "lint": "tslint --fix --project .",
        "prepublishOnly": "yarn build"
    },
    "bin": {
        "cli": "./dist/index.js"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src"
        ],
        "all": true
    },
    "files": [
        "dist"
    ],
    "devDependencies": {
        "@testdeck/mocha": "^0.1.2",
        "@types/chai": "^4.2.14",
        "@types/convict": "^5.2.1",
        "@types/node": "^14.14.6",
        "@types/yargs": "^15.0.9",
        "chai": "^4.2.0",
        "ts-mockito": "^2.6.1"
    },
    "dependencies": {
        "@task/database": "^0.1.0",
        "@task/pubsub": "^0.1.0",
        "@task/utils": "^0.1.0",
        "convict": "^6.0.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.6.3",
        "tsyringe": "^4.3.0",
        "yargs": "^16.1.0"
    }
}
