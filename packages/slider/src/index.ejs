            <tx-slider color="#2094c6"
                title="Food"
                min="0"
                max="1500"
                value="900"></tx-slider>
            <tx-slider color="#69ab3e"
                title="Insurance"
                min="0"
                max="2500"
                value="1200"></tx-slider>
            <tx-slider color="#f2a02c"
                title="Entertainment"
                min="0"
                max="3000"
                value="2400"></tx-slider>
            <tx-slider color="#e7594d"
                title="Health care"
                min="0"
                max="10000"
                value="1900"></tx-slider>
        </tx-container>
    </tx-expenses>
</body>

</html>
