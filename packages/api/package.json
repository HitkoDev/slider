{
    "name": "@task/api",
    "version": "0.0.0",
    "private": true,
    "license": "GPL-3.0",
    "main": "dist/index.js",
    "esnext": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "start": "node ./dist/index.js",
        "start:dev": "ts-node-dev --watch src --transpile-only --no-notify --respawn ./src/index.ts",
        "build": "tsc -p tsconfig.production.json",
        "watch": "tsc -p tsconfig.production.json -w",
        "test": "mocha --parallel",
        "coverage": "nyc mocha",
        "lint": "tslint --fix --project .",
        "prepublishOnly": "yarn build"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src"
        ],
        "all": true
    },
    "files": [
        "dist"
    ],
    "devDependencies": {
        "@testdeck/mocha": "^0.1.2",
        "@types/chai": "^4.2.14",
        "@types/convict": "^5.2.1",
        "@types/koa": "^2.11.6",
        "@types/koa-router": "^7.4.1",
        "@types/koa__cors": "^3.0.2",
        "@types/node": "^14.14.6",
        "@types/supertest": "^2.0.10",
        "@types/yargs": "^15.0.9",
        "chai": "^4.2.0",
        "supertest": "^6.0.1",
        "ts-mockito": "^2.6.1"
    },
    "dependencies": {
        "@koa/cors": "^3.1.0",
        "@task/database": "^0.0.0",
        "@task/pubsub": "^0.0.0",
        "@task/utils": "^0.0.0",
        "convict": "^6.0.0",
        "koa": "^2.13.0",
        "koa-router": "^10.0.0",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.3.0",
        "yargs": "^16.1.0"
    }
